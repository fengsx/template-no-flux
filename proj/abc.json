{
  "name": "<%- name %>",
  "options": {
    "type": "uxcore",
    "template": "<%- template %>",
    "npm": "<%- npm %>",
    "vars": {
      <% if (i18n) { %>"locale": "zh-cn",
      <% } %>"__LOCAL__": true
    },
    "buildvars": {
      "__LOCAL__": [false]<% if (i18n) { %>,
      "locale": [ "zh-cn", "en" ]<% } %>
    },
    "pages": <%= !SPA %>,
    "injects": [
      "uxcore/assets/iconfont.css",
      "uxcore/assets/orange.css",
      "lie/dist/lie.polyfill",
      "natty-storage/dist/natty-storage",
      "natty-fetch/dist/natty-fetch.pc",
      "react/dist/react-with-addons",
      "react-dom/dist/react-dom",
      "react-router/umd/ReactRouter",
      "uxcore"
    ],
    "alias": {
      "components":"components",
      "db":"app/db.js",
      "variables":"app/variables.js"<% if (i18n) { %>,
      "i18n": "i18n"<% } %>
    },
    "mockapi": {
      "/mock/user/query.json": "mock/user/query.js"
    }<% if (libraries) { %>,
    "libraries": {
      "Uxcore": {
        "output": "uxcore.js",
        "mappings": {
          "Table": "uxcore-table@~1.12.13",
          "Menu": "uxcore-menu@~1.4.1",
          "Dialog": "uxcore-dialog@^0.5.4",
          "EmptyData": "uxcore-empty-data@^0.1.2",
          "Message": "uxcore-message@^0.2.6"
        }
      }
    }<% } %>
  }
}
